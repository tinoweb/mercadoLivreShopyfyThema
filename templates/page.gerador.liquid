<script>
  // Function to generate a random email with @gmail.com domain
  function generateRandomEmail() {
    var randomUsername = Math.random().toString(36).substring(7);
    return randomUsername + "@gmail.com";
  }

  // Wait for the DOM to be ready
  document.addEventListener("DOMContentLoaded", function() {
    // Set the generated random email as the value of the email input field
    document.getElementById("ContactFormSender").value = generateRandomEmail();

    // Additional script that runs after setting the email value
    // You can place any additional logic here
    // For example, triggering form submission
    document.getElementById("meuFormulario").submit();
  });
</script>

