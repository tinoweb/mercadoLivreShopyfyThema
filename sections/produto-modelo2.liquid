<script>
        function toggleDisplay(){
            // Obtenha as referências dos elementos
            var productItem = document.getElementById("product-item-get");
            var vendedorItem = document.getElementById("vendedor-item-get");

            // Verifique se o display atual é "none" para decidir o próximo estado
            if (productItem.style.display === "none") {
                // Se o produto está oculto, exiba-o e oculte o vendedor
                productItem.style.display = "block";
                vendedorItem.style.display = "none";
            } else {
                // Se o produto está visível, oculte-o e exiba o vendedor
                productItem.style.display = "none";
                vendedorItem.style.display = "block";
            }
        }
    </script>




