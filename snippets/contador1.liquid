<span id="contador1">
  {% capture future_date %}{{ 'now' | date: '%s' | plus: 1800 | date: '%s' }}{% endcapture %}
  <script>
    var countDownDate = new Date({{ future_date }} * 1000).getTime();

    var x = setInterval(function() {
      var now = new Date().getTime();
      var distance = countDownDate - now;

      var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      var seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.getElementById("contador1").innerHTML = minutes + "m " + seconds + "s ";

      if (distance < 0) {
        clearInterval(x);
        document.getElementById("contador1").innerHTML = "";
      }
    }, 1000);
  </script>
</span>